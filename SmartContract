pragma solidity ^0.4.24;

contract Tweet
{
    bytes10 public location;
    bytes10 public text;
    bytes10 public score;
    bytes10 public magnit;

    constructor(bytes10 _location,
                bytes10 _text,
                bytes10 _score,
                bytes10 _magnit) public
    {
        require(_location.length > 0, "Location vuoto");
        require(_text.length > 0, "Text vuota");
        require(_score.length   > 0, "Score vuoto");
        require(_magnit.length > 0, "Magnitude vuoto");

        location = _location;
        text = _text;
        score   = _score;
        magnit = _magnit;
    }
}
